<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AddPro.MainPage">

    <StackLayout Padding="20,40,20,20" Spacing="25">
        <Label Text="First Number"/>
        <Border StrokeThickness="1" Stroke="Black">
            
            <Entry x:Name="txtFirstNumber" Keyboard="Numeric" />
        </Border>
        
        <Label Text="Second Number"/>
        <Border StrokeThickness="1" Stroke="Black">
            
            <Entry x:Name="txtSecondNumber" Keyboard="Numeric" />
        </Border>
        <Label x:Name="lblDisplay" Text="0" Padding="0,60" HorizontalOptions="Center" FontSize="55"/>
        
        <Button Text="Add" Clicked="Add_OnClicked"/>
        <Button Text="Clear" Clicked="Clear_OnClicked"/>
        
    </StackLayout>

</ContentPage>
